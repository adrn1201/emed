@model EMedFinalProject.Models.Branch
@inject EMedFinalProject.Data.ApplicationDbContext _context;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_CreateLayout.cshtml";
    var pharmacyList = _context.Pharmacies.ToList();
}

<h2 style="color:blue; margin-bottom:30px;">E<span class="Dash" style="color: pink;">-</span><span class="Dash" style="color:Red;">Med</span><span style="Color:black; float: right;">Create Branch Record</span></h2>
<div style="margin-bottom:20px;">
    <a asp-action="Index">View list of Branches</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BranchLocation" class="control-label"></label><span class="required">*</span>
                <input asp-for="BranchLocation" class="form-control" placeholder="Branch Location" style="width: 1100px;"/>
                <span asp-validation-for="BranchLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label><span class="required">*</span>
                <input asp-for="ZipCode" class="form-control" placeholder="ZipCode" style="width: 1100px;"/>
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PharmacyID" class="control-label"></label><span class="required">*</span>
                <select asp-for="PharmacyID" class="form-control" style="width: 1100px;" asp-items="@(new SelectList(pharmacyList, "PharmacyID", "Name"))">
                    <option value="">--Select a Pharmacy--</option>
                </select>
                <span asp-validation-for="PharmacyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="reset" value="Clear Fields" class="reset" />
                <input type="submit" value="Create" class="submit" />
            </div>
        </form>
    </div>
</div>

<script>
    function pageUnload() {
        return "The data on this page will be lost if you leave";
    }
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
