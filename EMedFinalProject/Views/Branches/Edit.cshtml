@model EMedFinalProject.Models.Branch
@inject EMedFinalProject.Data.ApplicationDbContext _context;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_EditLayout.cshtml";
    var pharmacyList = _context.Pharmacies.ToList();
}

<h2 style="color:blue; margin-bottom:30px;">E<span class="Dash" style="color: pink;">-</span><span class="Dash" style="color:Red;">Med</span><span style="Color:black; float: right;">Edit Branch Record</span></h2>
<div style="margin-bottom:20px;">
    <a asp-action="Index">Back to list of Branches</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BranchId" />
            <div class="form-group">
                <label asp-for="BranchLocation" class="control-label"></label>
                <input asp-for="BranchLocation" class="form-control" style="width: 1100px;"/>
                <span asp-validation-for="BranchLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label>
                <input asp-for="ZipCode" class="form-control" style="width: 1100px;" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PharmacyID" class="control-label"></label>
                <select asp-for="PharmacyID" class="form-control" style="width: 1100px;" asp-items="@(new SelectList(pharmacyList, "PharmacyID", "Name"))"></select>
                <span asp-validation-for="PharmacyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="submit" />
            </div>
        </form>
    </div>
</div>
<script>
    function pageUnload() {
        return "The data on this page will be lost if you leave";
    }
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
