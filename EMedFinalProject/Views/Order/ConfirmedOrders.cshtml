@model IEnumerable<EMedFinalProject.Models.Order>

@{
    ViewData["Title"] = "ConfirmedOrders";
    Layout = "~/Views/Shared/_ConfirmedOrders.cshtml";
}

<h2 style="color:blue; margin-bottom:30px;">E<span class="Dash" style="color: pink;">-</span><span class="Dash" style="color:Red;">Med</span><span style="Color:black; float: right;">Confirmed Orders</span></h2>
<table class="table" id="records">
    <thead>
        <tr>
            <th>
                FullName
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th>
                Email
            </th>
            <th>
                Ordered Products
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName), @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a href="@(Url.Action("ConfirmedOrderDetails","Order", new { id=item.OrderID}))">View</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="OrderDetails" asp-route-id="@item.OrderID"><i class="fa fa-info"></i></a>

                </td>
                <td>

                    <a class="btn btn-sm btn-success" asp-action="ModifyStatus" asp-route-id="@item.OrderID"><i class="fa fa-edit"></i></a>
                </td>

            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $('#records').DataTable();
        });
    </script>
}
