    <script>
        function ShowHideTermLinksFooter() {
            var d = new Date();
            var dayofweek = d.getDay();
            var hourofday = d.getHours();
            if ((dayofweek === 0 && hourofday < 8) || (dayofweek === 0 && hourofday >= 18) || (dayofweek === 1 && hourofday < 8) || (dayofweek === 1 && hourofday >= 18) || (dayofweek === 2 && hourofday < 8) || (dayofweek === 2 && hourofday >= 18) || (dayofweek === 3 && hourofday < 8) || (dayofweek === 3 && hourofday >= 18) || (dayofweek === 4 && hourofday < 8) || (dayofweek === 4 && hourofday >= 18) || (dayofweek === 5 && hourofday < 8) || (dayofweek === 5 && hourofday >= 18) || (dayofweek === 6 && hourofday < 8) || (dayofweek === 6 && hourofday >= 18)) {
                $("#termsFootLinks a").click(function (e) {
                    e.preventDefault();
                    swal("Service Momentarily Closed", "Our Order and Delivery Service will resume at 8am");
                });

            }

        }
        $(document).ready(function () {

            ShowHideTermLinksFooter();

