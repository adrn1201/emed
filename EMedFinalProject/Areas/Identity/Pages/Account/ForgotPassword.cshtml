@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Homepage prop/assets/img/E-Med.png" rel="icon" />
    <title>Admin|Forgot Password</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>

        .container {
            margin-top: 100px;
        }

        .multistep-container {
            max-width: 610px;
            margin: 0 auto;
        }

            .multistep-container .multistep-form-area {
                background-color: var(--white);
                margin-top: 20px;
                box-shadow: 0 0 5px rgba(0, 0, 0, .5);
                position: relative;
                min-height: 600px;
                max-height: 1050px;
                min-width: 450px;
                max-width: 450px;
                left: 40px;
                top: -20px;
                box-shadow: 3px 4px 8px 3px rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            }

                .multistep-container .multistep-form-area .form-box {
                    position: absolute;
                    top: 25px;
                    left: 25px;
                    height: auto;
                    width: auto;
                }

        #emailField, #passwordField {
            width: 410px;
        }

        h2 {
            text-align: center;
            color: blue;
            margin-bottom: 10px;
        }

        .Dash {
            color: pink;
        }


        .Med {
            color: red;
        }

        .signIn {
            text-align: center;
        }

        .sub {
            background-color: #1a75ff;
            border: 0;
            box-shadow: none;
            padding: 7px 30px;
            min-width: 400px;
            border-radius: 20px;
            color: var(--white);
            font-weight: 500;
        }

        #hyperLinks {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">

            <div class="multistep-container">

                <div class="multistep-form-area">
                    <div class="form-box">
                        <h2>E<span class="Dash">-</span><span class="Med">Med</span></h2>
                        <h4 class="signIn">@ViewData["Title"]</h4>

                        <div class="row">
                            <div class="col-md-4">
                                <form method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control" id="emailField" placeholder="Enter Email" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="sub">Submit</button>
                                </form>
                            </div>

                        </div>
                        <div class="form-group" id="hyperLinks">
                            <p>
                                <a asp-page="./Login">Back to Log in</a>
                            </p>
                        </div>
                    </div>
                    </div>
                </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
